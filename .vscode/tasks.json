{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "--std=c++17"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "shell",
            "label": "删除活动文件",
            "command": "cmd",
            "args": [
                "/c",
                "del /Q \"${workspaceFolder}\\bin\\*\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "生成测试文件",
            "command": "cmd",
            "args": [
                "/c",
                "copy /Y \"${fileDirname}\\${fileBasenameNoExtension}.in\" \"${workspaceFolder}\\bin\\\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "输入文件启动",
            "dependsOn": [
                "C/C++: g++ 生成活动文件",
                "生成测试文件"
            ]
        },
        {
            "type": "shell",
            "label": "返回输出文件",
            "command": "cmd",
            "args": [
                "/c",
                "copy /Y \"${workspaceFolder}\\bin\\${fileBasenameNoExtension}.out\" \"${fileDirname}\\\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "完成带文件启动",
            "dependsOn": [
                "返回输出文件",
                "删除活动文件"
            ],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "运行程序",
            "dependsOn": [
                "C/C++: g++ 生成活动文件"
            ],
            "command": "cmd",
            "args": [
                "/c",
                "start cmd /k \"${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}